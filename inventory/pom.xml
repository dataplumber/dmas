   <build>
      <sourceDirectory>src/main/</sourceDirectory>
      <outputDirectory>target/classes</outputDirectory>
      <resources>
         <resource>
            <directory>src/main/resources</directory>
            <excludes>
               <exclude>config/*</exclude>
               <exclude>sql/*</exclude>
            </excludes>
         </resource>
         <resource>
            <directory> src/main/java/gov/nasa/podaac/inventory/model </directory>
            <filtering>true</filtering>
            <targetPath>gov/nasa/podaac/inventory/model</targetPath>
            <includes>
               <include>*.hbm.xml</include>
            </includes>
         </resource>
         <resource>
            <directory> src/main/java/gov/nasa/podaac/inventory/xml </directory>
            <filtering>true</filtering>
            <targetPath>gov/nasa/podaac/inventory/xml</targetPath>
            <includes>
               <include>*.xml</include>
            </includes>
         </resource>
      </resources>
      <directory>target</directory>
      <finalName>${pom.artifactId}-${pom.version}</finalName>
      <testSourceDirectory>src/test</testSourceDirectory>
      <testResources>
         <testResource>
            <filtering>true</filtering>
            <directory>src/test/resources</directory>
         </testResource>
         <testResource>
            <directory>src/main/resources/config</directory>
            <filtering>true</filtering>
            <includes>
               <include>hibernate.cfg.xml</include>
               <include>inventory.log.properties</include>
            </includes>
         </testResource>
      </testResources>
      <filters>
         <filter>src/main/filters/inventory.filters.properties</filter>
         <filter>src/test/filters/test.filters.properties</filter>
      </filters>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-site-plugin</artifactId>
            <version>2.1.1</version>
            <dependencies>
               <dependency>
                  <groupId>commons-httpclient</groupId>
                  <artifactId>commons-httpclient</artifactId>
                  <version>3.1</version>
                  <exclusions>
                     <exclusion>
                        <groupId>commons-logging</groupId>
                        <artifactId>commons-logging</artifactId>
                     </exclusion>
                  </exclusions>
               </dependency>
            </dependencies>
         </plugin>
         <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
               <execution>
                  <id>compile</id>
                  <phase>compile</phase>
                  <configuration>
                     <tasks>
                        <taskdef name="groovyc" classname="org.codehaus.groovy.ant.Groovyc">
                           <classpath refid="maven.compile.classpath"/>
                        </taskdef>
                        <mkdir dir="${project.build.outputDirectory}"/>
                        <groovyc destdir="${project.build.outputDirectory}"
                           srcdir="${basedir}/src/main/groovy/" listfiles="true">
                           <classpath refid="maven.compile.classpath"/>
                        </groovyc>
                     </tasks>
                     <files>
                        <file>${basedir}/target/test-classes/test-inventory.properties</file>
                     </files>
                  </configuration>
                  <goals>
                     <goal>run</goal>
                  </goals>
               </execution>
               <execution>
                  <phase>site</phase>
                  <configuration>
                     <tasks>
                        <taskdef name="groovydoc" classname="org.codehaus.groovy.ant.Groovydoc">
                           <classpath>
                              <path refid="maven.compile.classpath"/>
                           </classpath>
                        </taskdef>
                        <groovydoc destdir="target/site/apidocs" sourcepath="src/main/groovy"
                           packagenames="**.*" use="true" windowtitle="Groovydoc" private="false"/>
                     </tasks>
                  </configuration>
                  <goals>
                     <goal>run</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <configuration>
               <descriptors>
                  <descriptor> src/main/assembly/inventory.xml </descriptor>
               </descriptors>
            </configuration>
            <executions>
               <execution>
                  <id>bin-release</id>
                  <phase>package</phase>
                  <goals>
                     <goal>attached</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>2.3.1</version>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
            </configuration>
         </plugin>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>sql-maven-plugin</artifactId>
            <dependencies>
               <dependency>
                  <groupId>com.oracle</groupId>
                  <artifactId>ojdbc6</artifactId>
                  <version>11.2.0.4</version>
                  <scope>runtime</scope>
               </dependency>
            </dependencies>
            <configuration>
               <driver>oracle.jdbc.driver.OracleDriver</driver>
               <url>${database.url}</url>
               <username>${database.username}</username>
               <password>${database.password}</password>
               <settingsKey>podaac-database</settingsKey>
               <autocommit>true</autocommit>
               <srcFiles>
                  <srcFile> src/main/resources/sql/drop_spatial_index.sql </srcFile>
                  <srcFile> src/main/resources/sql/drop_schema.sql </srcFile>
                  <srcFile> src/main/resources/sql/create_schema.sql </srcFile>
                  <srcFile> src/main/resources/sql/create_spatial_index.sql </srcFile>
                  <srcFile> src/main/resources/sql/load_schema.sql </srcFile>
               </srcFiles>
               <onError>continue</onError>
            </configuration>
         </plugin>
         <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
		<!-- skips surefire tests without skipping failsafe tests.
                 Property value seems to magically default to false -->
        	<skipTests>${skip.surefire.tests}</skipTests>
               <includes>
                  <include>**/InventoryTestSuite.java</include>
                  <include>**/ServiceTest.class</include>
               </includes>
               <systemProperties>
                  <property>
                     <name>inventory.config.file</name>
                     <value>/home/gangl/dev/trunk/inventory/src/main/resources/config/inventory.config</value>
                  </property>
                  <property>
                     <name>inventory.hibernate.config.file</name>
                     <value> ${basedir}/target/test-classes/hibernate.cfg.xml
                     </value>
                  </property>
                  <property>
                     <name>log4j.configuration</name>
                     <value>
                        file://${basedir}/target/test-classes/inventory.log.properties
                     </value>
                  </property>
                  <property>
                     <name>test-sip.xml</name>
                     <value>${basedir}/target/test-classes/test-inventory.xml</value>
                  </property>
                  <property>
                     <name>ingest.metadata.manifest.update.xml</name>
                     <value>${basedir}/target/test-classes/test-manifest-update.xml</value>
                  </property>
                  <property>
                     <name>test.dir</name>
                     <value>${basedir}/target/test-classes</value>
                  </property>
               </systemProperties>
            </configuration>
         </plugin>
