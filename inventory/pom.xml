   <artifactId>inventory</artifactId>
   <packaging>jar</packaging>
   <name>Inventory Program Set</name>
   <version>4.4.0</version>
   <description> The Inventory program set manages the data model and its implementation in the database. </description>
   <url>http://podaac-cm.jpl.nasa.gov/docs/inventory/</url>
   <repositories>
     <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>mvn central</id>
      <name>Maven Repository Switchboard</name>
