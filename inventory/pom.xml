         <plugin>
            <groupId>org.codehaus.gmaven</groupId>
            <artifactId>gmaven-plugin</artifactId>
            <version>1.3</version>
            <extensions>true</extensions>
            <executions>
               <execution>
                  <goals>
                     <goal>generateStubs</goal>
                     <goal>compile</goal>
                     <goal>generateTestStubs</goal>
                     <goal>testCompile</goal>
                  </goals>
                  <configuration>
                     <providerSelection>1.7</providerSelection>
                     <systemProperties>
                        <property>
                           <name>ingest.metadata.manifest.xml</name>
                           <value>/target/test-classes/test-manifest.xml</value>
                        </property>
                     </systemProperties>
                  </configuration>
               </execution>
            </executions>
            <dependencies>
               <dependency>
                  <groupId>org.codehaus.groovy</groupId>
                  <artifactId>groovy-all</artifactId>
                  <version>1.7.8</version>
               </dependency>
            </dependencies>
         </plugin>
      </plugins>
   </build>

